<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/medium_padding"
        android:background="@null">
    <EditText
        android:id="@+id/edit_name_checkout_form2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_width"
        android:hint="Name on your card"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="@dimen/medium_text_size"
        android:textColorHint="@color/light_grey"
        android:paddingStart="@dimen/less_large_padding"
        android:paddingEnd="@dimen/medium_padding"
        android:background="@drawable/rounded_rectangle_stroke_grey"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/double_medium_padding"
        android:layout_marginEnd="@dimen/double_medium_padding"
        android:layout_marginTop="@dimen/medium_padding"/>
    <TextView
        android:id="@+id/text_name_checkout_form2"
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/small_width"
        android:gravity="center"
        android:textSize="@dimen/small_icon_size"
        android:text="@string/fa_icon_user"
        android:fontFamily="@font/fontawesome"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="@+id/edit_name_checkout_form2"
        app:layout_constraintLeft_toLeftOf="@+id/edit_name_checkout_form2"/>
    <EditText
        android:id="@+id/edit_card_checkout_form2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_width"
        android:hint="XXXX-XXXX-XXXX-XXXX"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:maxLength="19"
        android:textColorHint="@color/light_grey"
        android:textSize="@dimen/medium_text_size"
        android:paddingStart="@dimen/less_large_padding"
        android:paddingEnd="@dimen/medium_padding"
        android:background="@drawable/rounded_rectangle_stroke_grey"
        android:layout_marginStart="@dimen/double_medium_padding"
        android:layout_marginEnd="@dimen/double_medium_padding"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@+id/edit_name_checkout_form2"/>
    <TextView
        android:id="@+id/text_card_checkout_form2"
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/small_width"
        android:gravity="center"
        android:textSize="@dimen/small_icon_size"
        android:text="@string/fa_credit_card"
        android:fontFamily="@font/fontawesome"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="@+id/edit_card_checkout_form2"
        app:layout_constraintLeft_toLeftOf="@+id/edit_card_checkout_form2"/>
    <TextView
        android:id="@+id/text_card_visa_checkout_form2"
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/small_width"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/small_icon_size"
        android:text="@string/fa_master_card"
        android:fontFamily="@font/fontawesome"
        android:textColor="@color/grey"
        android:layout_marginEnd="@dimen/medium_padding"
        app:layout_constraintTop_toTopOf="@+id/edit_card_checkout_form2"
        app:layout_constraintRight_toRightOf="@+id/edit_card_checkout_form2"/>
    <Spinner
        android:id="@+id/spinner_month_checkout_form2"
        android:layout_width="@dimen/medium_height"
        android:layout_height="@dimen/small_width"
        android:prompt="@string/expiry_month"
        android:textSize="@dimen/medium_text_size"
        android:background="@drawable/rounded_rectangle_stroke_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_card_checkout_form2"
        android:layout_marginStart="@dimen/double_medium_padding"
        android:layout_marginEnd="@dimen/double_medium_padding"
        android:layout_marginTop="@dimen/small_padding"/>
    <Spinner
        android:id="@+id/spinner_year_checkout_form2"
        android:layout_width="@dimen/medium_height"
        android:layout_height="@dimen/small_width"
        android:prompt="@string/expiry_year"
        android:textSize="@dimen/medium_text_size"
        android:background="@drawable/rounded_rectangle_stroke_grey"
        app:layout_constraintTop_toBottomOf="@+id/edit_card_checkout_form2"
        app:layout_constraintLeft_toRightOf="@+id/spinner_month_checkout_form2"
        android:layout_marginStart="@dimen/medium_padding"
        android:layout_marginEnd="@dimen/double_medium_padding"
        android:layout_marginTop="@dimen/small_padding"/>
    <EditText
        android:id="@+id/edit_cvv_checkout_form2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_width"
        android:hint="CVV"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="number"
        android:maxLength="3"
        android:textColorHint="@color/light_grey"
        android:textSize="@dimen/medium_text_size"
        android:paddingStart="@dimen/less_large_padding"
        android:paddingEnd="@dimen/medium_padding"
        android:background="@drawable/rounded_rectangle_stroke_grey"
        android:layout_marginStart="@dimen/double_medium_padding"
        android:layout_marginEnd="@dimen/double_medium_padding"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@+id/spinner_month_checkout_form2"/>
    <TextView
        android:id="@+id/text_cvv_checkout_form2"
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/small_width"
        android:gravity="center"
        android:textSize="@dimen/small_icon_size"
        android:text="@string/fa_credit_card_light"
        android:fontFamily="@font/fontawesome"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="@+id/edit_cvv_checkout_form2"
        app:layout_constraintLeft_toLeftOf="@+id/edit_cvv_checkout_form2"/>
    <ImageView
        android:id="@+id/image_cvv_checkout_form2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium_height"
        android:src="@drawable/cvv_hint"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@+id/edit_cvv_checkout_form2"/>
    <Button
        android:id="@+id/button_next_step_checkout_form2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_width"
        android:text="Review order details..."
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/double_medium_padding"
        android:layout_marginEnd="@dimen/double_medium_padding"
        android:layout_marginTop="@dimen/medium_padding"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/rounded_rectangle_button"
        app:layout_constraintTop_toBottomOf="@+id/image_cvv_checkout_form2"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>